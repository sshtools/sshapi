<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<properties>
		<applicationVersion>${project.version}</applicationVersion>
		<projectDescription>${project.description}</projectDescription>
	</properties>
	<modelVersion>4.0.0</modelVersion>
	<artifactId>sshapi-tests</artifactId>
	<name>SSHAPI Tests</name>
	<description>Unit and integration tests.</description>
	<parent>
		<artifactId>sshapi-group</artifactId>
		<groupId>com.sshtools</groupId>
		<version>2.0.0-SNAPSHOT</version>
		<relativePath>..</relativePath>
	</parent>
	<url>${scmWebRoot}/${project.artifactId}/</url>
	<build>
		<testSourceDirectory>src/test/java</testSourceDirectory>
		<testOutputDirectory>target/test-classes</testOutputDirectory>
		<testResources>
			<testResource>
				<targetPath>.</targetPath>
				<directory>src/test/resources</directory>
			</testResource>
		</testResources>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>3.0.0-M3</version>
			</plugin>
		</plugins>
	</build>

	
	<!-- Each of the test combinations is a profile that should be manually
	     activated.
	     
	     There are 10 providers, and 4 servers giving a total of 40 possible combinations
	     of API. However, some Maverick server APIs will not work with some versions of
	     Maverick client APIs in the same runtime.
	     
	     There are profiles for both the server and client. One of each should be activated.
	     
	     Possible [server-config-name]s are :-
	     		server-openssh-local
	     		server-openssh
	     		server-maverick
	     		server-synergy
	     		
	     Possible [sshapi-provider-name]s are :-
	     		client-maverick-synergy
	     		client-maverick-synergy-hotfixes
	     		client-maverick-16
	     		client-maverick
	     		client-ganymed
	     		client-j2ssh
	     		client-jsch
	     		client-libssh
	     		client-openssh
	     		client-trilead
	     		client-sshj
	     		 
	     
	-->
	     
	<profiles>
		<!-- Local OpenSSH server -->
		<profile>
			<id>server-openssh-local</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
					    <artifactId>maven-surefire-plugin</artifactId>
					    <version>3.0.0-M3</version>
					    <configuration>
					    	<systemPropertyVariables>
					    		<sshapiTests.configurationResourceName>/sshapi-client-openssh-local-server.properties</sshapiTests.configurationResourceName>
					    	</systemPropertyVariables>
					    </configuration>
					</plugin>
				</plugins>
			</build>
			<dependencies>
				<dependency>
					<groupId>com.sshtools</groupId>
					<artifactId>sshapi-tests-server-openssh-local</artifactId>
					<version>${project.version}</version>
					<type>test-jar</type>
					<scope>test</scope>
				</dependency>
				<dependency>
					<groupId>com.sshtools</groupId>
					<artifactId>sshapi-tests-server-openssh</artifactId>
					<version>${project.version}</version>
					<type>test-jar</type>
					<scope>test</scope>
				</dependency>
			</dependencies>
		</profile>
		
		<!-- Remote OpenSSH server -->
		<profile>
			<id>server-openssh</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
					    <artifactId>maven-surefire-plugin</artifactId>
					    <version>3.0.0-M3</version>
					    <configuration>
					    	<systemPropertyVariables>
					    		<sshapiTests.configurationResourceName>/sshapi-client-openssh-server.properties</sshapiTests.configurationResourceName>
					    	</systemPropertyVariables>
					    </configuration>
					</plugin>
				</plugins>
			</build>
			<dependencies>
				<dependency>
					<groupId>com.sshtools</groupId>
					<artifactId>sshapi-tests-server-openssh-remote</artifactId>
					<version>${project.version}</version>
					<type>test-jar</type>
					<scope>test</scope>
				</dependency>
				<dependency>
					<groupId>com.sshtools</groupId>
					<artifactId>sshapi-tests-server-openssh</artifactId>
					<version>${project.version}</version>
					<type>test-jar</type>
					<scope>test</scope>
				</dependency>
			</dependencies>
		</profile>
		
		<!-- Local Maverick Legacy server -->
		<profile>
			<id>server-maverick</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
					    <artifactId>maven-surefire-plugin</artifactId>
					    <version>3.0.0-M3</version>
					    <configuration>
					    	<systemPropertyVariables>
					    		<sshapiTests.configurationResourceName>/sshapi-client-maverick-server.properties</sshapiTests.configurationResourceName>
					    	</systemPropertyVariables>
					    </configuration>
					</plugin>
				</plugins>
			</build>
			<dependencies>
				<dependency>
					<groupId>com.sshtools</groupId>
					<artifactId>sshapi-tests-server-maverick-sshd</artifactId>
					<version>${project.version}</version>
					<type>test-jar</type>
					<scope>test</scope>
				</dependency>
			</dependencies>
		</profile>
		
		<!-- Local Maverick Synergy server -->
		<profile>
			<id>server-maverick-synergy</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
					    <artifactId>maven-surefire-plugin</artifactId>
					    <version>3.0.0-M3</version>
					    <configuration>
					    	<systemPropertyVariables>
					    		<sshapiTests.configurationResourceName>/sshapi-client-maverick-synergy-server.properties</sshapiTests.configurationResourceName>
					    	</systemPropertyVariables>
					    </configuration>
					</plugin>
				</plugins>
			</build>
			<dependencies>
				<dependency>
					<groupId>com.sshtools</groupId>
					<artifactId>sshapi-tests-server-maverick-synergy</artifactId>
					<version>${project.version}</version>
					<type>test-jar</type>
					<scope>test</scope>
				</dependency>
				
				<!-- TODO hrm... why needed!? -->
				<dependency>
					<groupId>com.sshtools.hotfixes</groupId>
					<artifactId>maverick-synergy-server</artifactId>
					<version>3.1.2</version>
					<scope>test</scope>
				</dependency>
				<dependency>
					<groupId>com.sshtools.hotfixes</groupId>
					<artifactId>maverick-virtual-filesystem</artifactId>
					<version>3.1.2</version>
					<scope>test</scope>
				</dependency>
				<dependency>
					<groupId>com.sshtools.hotfixes</groupId>
					<artifactId>maverick-virtual-session</artifactId>
					<version>3.1.2</version>
					<scope>test</scope>
				</dependency>
			</dependencies>
		</profile>
		
		<!-- Maverick Synergy Client -->
		<profile>
			<id>client-maverick-synergy</id>
			<dependencies>
				<dependency>
					<groupId>com.sshtools</groupId>
					<artifactId>sshapi-maverick-synergy</artifactId>
					<version>${project.version}</version>
					<type>jar</type>
					<scope>compile</scope>
				</dependency>
			</dependencies>
		</profile>
		
		<!-- Maverick Synergy Client (Hotfixes) -->
		<profile>
			<id>client-maverick-synergy-hotfixes</id>
			<dependencies>
				<dependency>
					<groupId>com.sshtools</groupId>
					<artifactId>sshapi-maverick-synergy-hotfixes</artifactId>
					<version>${project.version}</version>
					<type>jar</type>
					<scope>compile</scope>
				</dependency>
			</dependencies>
		</profile>
		
		<!-- Maverick 1.6+ Client -->
		<profile>
			<id>client-maverick-16</id>
			<dependencies>
				<dependency>
					<groupId>com.sshtools</groupId>
					<artifactId>sshapi-maverick-16</artifactId>
					<version>${project.version}</version>
					<type>jar</type>
					<scope>compile</scope>
				</dependency>
				<dependency>
					<groupId>com.sshtools</groupId>
					<artifactId>sshapi-maverick-16-license</artifactId>
					<version>${project.version}</version>
					<optional>true</optional>
					<type>jar</type>
					<scope>compile</scope>
				</dependency>  
			</dependencies>
		</profile>
		
		<!-- Unsupported (< 1.6) Maverick Client -->
		<profile>
			<id>client-maverick</id>
			<dependencies>
				<dependency>
					<groupId>com.sshtools</groupId>
					<artifactId>sshapi-maverick</artifactId>
					<version>${project.version}</version>
					<type>jar</type>
					<scope>compile</scope>
				</dependency>
			</dependencies>
		</profile>
		
		<!-- Ganymed Client -->
		<profile>
			<id>client-ganymed</id>
			<dependencies>
				<dependency>
					<groupId>com.sshtools</groupId>
					<artifactId>sshapi-ganymed</artifactId>
					<version>${project.version}</version>
					<type>jar</type>
					<scope>compile</scope>
				</dependency>
			</dependencies>
		</profile>
		
		<!-- SSHJ  -->
		<profile>
			<id>client-sshj</id>
			<dependencies>
				<dependency>
					<groupId>com.sshtools</groupId>
					<artifactId>sshapi-sshj</artifactId>
					<version>${project.version}</version>
					<type>jar</type>
					<scope>compile</scope>
				</dependency>
			</dependencies>
		</profile>
		
		<!-- JSch -->
		<profile>
			<id>client-jsch</id>
			<dependencies>
				<dependency>
					<groupId>com.sshtools</groupId>
