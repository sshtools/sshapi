					<version>${project.version}</version>
					<type>jar</type>
					<scope>compile</scope>
				</dependency>
			</dependencies>
		</profile>
		
		<!-- LibSSH -->
		<profile>
			<id>client-libssh</id>
			<dependencies>
				<dependency>
					<groupId>com.sshtools</groupId>
					<artifactId>sshapi-libssh</artifactId>
					<version>${project.version}</version>
					<type>jar</type>
					<scope>compile</scope>
				</dependency>
			</dependencies>
		</profile>
		
		<!-- OpenSSH -->
		<profile>
			<id>client-openssh</id>
			<dependencies>
				<dependency>
					<groupId>com.sshtools</groupId>
					<artifactId>sshapi-openssh</artifactId>
					<version>${project.version}</version>
					<type>jar</type>
					<scope>compile</scope>
				</dependency>
			</dependencies>
		</profile>
		
		<!-- Trilead -->
		<profile>
			<id>client-trilead</id>
			<dependencies>
				<dependency>
					<groupId>com.sshtools</groupId>
					<artifactId>sshapi-trilead</artifactId>
					<version>${project.version}</version>
					<type>jar</type>
					<scope>compile</scope>
				</dependency>
			</dependencies>
		</profile>
	</profiles>
	<dependencies>
		<dependency>
			<groupId>com.sshtools</groupId>
			<artifactId>sshapi-core</artifactId>
			<version>${project.version}</version>
			<type>jar</type>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>com.sshtools</groupId>
			<artifactId>sshapi-tests-core</artifactId>
			<version>${project.version}</version>
			<type>test-jar</type>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.slf4j</groupId>
